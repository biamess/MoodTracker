@model MoodTracker.ViewModels.DailyMoodIndexViewModel;

@{
    ViewData["Title"] = "Year in Moods";
}

@section Styles {
    <link href="@Url.Content("~/css/moodTable.css")" rel="stylesheet" type="text/css" />
}

<h1>Year in Moods</h1>

@if (!Model.DailyMoods.ContainsKey(DateTime.Today))
{
    <p>
        <a asp-action="Create">Log today's mood</a>
    </p>
}
    <div class="moodTableContainer">
        <div class="key">
            @foreach (var mood in Model.Moods)
            {
                <div class="keyRow">
                    <div class="moodCell" style="@("background-color:" +  mood.Color + ";")"></div>
                    <div class="moodName">
                        @mood.Name
                    </div>
                </div>
            }
        </div>
        <table class="moodTable">
            <tr>
                <th></th>
                @for (var date = 1; date <= 31; date++)
                {
                    <th class="date">@date</th>
                }
            </tr>
            @foreach (var month in Model.Dates)
            {
                <tr>
                    <th>
                        <div class="month">
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(month[0].Month)
                        </div>
                    </th>

                    @foreach (var day in month)
                    {
                <td class="tooltipContainer">
                    @if (Model.DailyMoods.ContainsKey(day))
                    {
                        <div class="actionTooltip">
                            <div>
                                @Html.DisplayFor(model => model.DailyMoods[day].Mood.Name)
                            </div>
                            <div>
                                @day.ToString("D", System.Globalization.CultureInfo.CurrentCulture)
                            </div>
                            <a asp-action="Edit" asp-route-id="@Model.DailyMoods[day].Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@Model.DailyMoods[day].Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@Model.DailyMoods[day].Id">Delete</a>
                        </div>

                        <a asp-action="Edit" asp-route-id="@Model.DailyMoods[day].Id">
                            <div class="moodCell" style="@("background-color:" +  Model.DailyMoods[day].Mood.Color + ";")"></div>
                        </a>
                    }
                    else
                    {
                        <div class="actionTooltip">
                            <div> Log mood for </div>
                            <div>
                                @day.ToString("D", System.Globalization.CultureInfo.CurrentCulture)
                            </div>
                        </div>

                        <a asp-action="Create" asp-route-date="@day">
                            <div class="moodCell" style="background-color:#ffffff;">
                            </div>
                        </a>
                    }
                </td>
                    }
                </tr>
            }
        </table>
    </div>
