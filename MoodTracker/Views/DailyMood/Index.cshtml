@model MoodTracker.ViewModels.DailyMoodIndexViewModel;

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link href="@Url.Content("~/css/moodTable.css")" rel="stylesheet" type="text/css" />
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in Model.Dates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => day.DayOfWeek)
                </td>
                <td>
                    <div class="moodCell" style="@("background-color:" + (Model.DailyMoods.ContainsKey(day) ? Model.DailyMoods[day].Mood.Color : "#ffffff") + ";")"> </div>
                    @if (Model.DailyMoods.ContainsKey(day))
                    {
                        <div>
                            @Html.DisplayFor(modelItem => Model.DailyMoods[day].Mood.Name)
                        </div>
                    }                
                </td>
                <td>
                    @if (Model.DailyMoods.ContainsKey(day))
                    {
                        <div>
                            @Html.DisplayFor(modelItem => Model.DailyMoods[day].Notes)
                        </div>
                    }
                    </td>
                <td>
                    @if (Model.DailyMoods.ContainsKey(day)) { 
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.DailyMoods[day].Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@Model.DailyMoods[day].Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@Model.DailyMoods[day].Id">Delete</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
